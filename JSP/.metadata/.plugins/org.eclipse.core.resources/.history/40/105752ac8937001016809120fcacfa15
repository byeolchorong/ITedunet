package chapter05;

import java.io.IOException;
import java.util.Enumeration;
import java.util.HashMap;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/exam5_2")
public class request02 extends HttpServlet {

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		System.out.println("exam5_2 실행중");
		// 전처리 : 데이터 확보하는 단계 ((공급처 : 데이터를 공급하는 역할)모델이나 뷰한테 데이터를 보내는 역할) 
		HashMap<String,String> pack = new HashMap<String,String>();
		Enumeration en = req.getHeaderNames();
		while (en.hasMoreElements()) {
			String headerName = (String) en.nextElement();
			String headerValue = req.getHeader(headerName);
			pack.put(headerName, headerValue);
		}
		// 모델이동
		// 뷰이동
		req.setAttribute("mapdate", pack);
		RequestDispatcher ds = req.getRequestDispatcher("chapter05/request02.jsp");
		ds.forward(req, resp);
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

	}
	
}
